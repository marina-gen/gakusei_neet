<body background="haikei.png">
    <header>
        <!-- 日付 -->
        <span id="view_today"></span>

        <script type="text/javascript">
        document.getElementById("view_today").innerHTML = getToday();
        
        function getToday() {
            var now = new Date();
            var year = now.getFullYear();
            var mon = now.getMonth()+1; //１を足すこと
            var day = now.getDate();
            var you = now.getDay(); //曜日(0～6=日～土)
        
            //曜日の選択肢
            var youbi = new Array("日","月","火","水","木","金","土");
            //出力用
            var s = year + "年" + mon + "月" + day + "日 (" + youbi[you] + ")".small();
            return s;
        }
        </script>
        <!-- 日付ここまで -->
    </header>
    <main>
        <%= form_for(@diary) do |f| %>
          <%= f.hidden_field :today, :value => Date.today %>
          <%= f.text_area :diary, class: "kakomi-box1", maxlength: "200", :placeholder => "今日、どんなことしたん？" %>
          <%= f.submit "セーブ", class: "btn btn-svg" %>
        <% end %>
